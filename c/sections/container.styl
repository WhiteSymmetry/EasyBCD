#container
  cnt()
  w 962px
  bg #fff
  bt 1px solid hsl(hue1,45,30)
  bs 1px solid #dbdbdb
  bb 1px solid #d2d2d2
  box-shadow b30 0 1px 3px
  border-radius 5px
  mb x*3


  a.cta-button
    d block
    fl()
    ta center
    border-radius 3px
    background linear-gradient(top, m250, m230)
    fw bold
    lh x*3
    tt uppercase
    c hsl(lhue,20,30)
    text-shadow #fff 0 1px 0
    cursor pointer
    box-shadow inset #fff 0 1px 0
    &:hover
      background linear-gradient(top, m240, m200)
    &:active
      background linear-gradient(top, m220, m180)
      box-shadow inset b35 0 0 .5em
    
  section
    clearfix()
    p 3em 0
    bb 1px solid hsl(lhue,25,85)
    background linear-gradient(top, hsla(lhue,25,60,.1), hsla(lhue,0,100,.1) 75px)

    header
      mb x*3
      p 0 cw
      h2
        f 2em/1.5 sans
        c hsl(hue1,25,40)
        ta center
        strong
          fw bold

    .content
      p 0 cw

    &.intro
      border-radius 4px 4px 0 0
      p 0
      background linear-gradient(top, hsl(hue1,55,23), hsl(hue1,60,37))
      c #fff
      aa()
      relative()
      header
        pt 4.5em
        h1
          f 2.6em sans
          lh x*3
          ls -2px
          mb x*3
          c hsl(hue1,25,80)
          text-shadow b50 0 1px 2px
          col 7
      .content
        p 0
        clearfix()
        c hsl(hue1,25,70)
        text-shadow b30 0 1px 0

        p.intro
          f 1.5em sans
          lh x*2
          col 7
          pl cw
          mb x*4.5

        .img
          absolute top 1.5em right 0
          span 4
          bg #fff
          b 1px solid #ddd
          background linear-gradient(top, m240, m220)
          ta center
          f 3em sans
          lhh x*22.5
          c #aaa
          text-shadow #fff 0 2px 0
      footer
        clearfix()
        bg b20
        box-shadow inset b15 0 1px 2px
        p 1.5em cw

        a.cta-button
          w cw*2
          fl()
          mr 1.5em

    &.awards
      bg #fff
      ul
        d block
        li
          fl()
          pr 2.4em
          a
            d block
            img
              max-height 60px

    &.support
      ul.os
        clearfix()
        col 5
        li
          fl()
          mr 2em
          img
            h 70px
            w auto
          &.bsd
            mr 0
      p.legacy
        col 5
        p 1em
        border-radius 5px
        bg hsl(lhue,50,95)

    &.benefits
      .content
        p 0 cw - x
        ul
          clearfix()
          li
            mb 3em
            fl()
            w 50%
            p 0 1em
            box-sizing border-box
            h3
              s 115%
              fw bold
              aa()
              lh x*3
              c #000
            p
              c #666
              pr 3em


    &.comparison
      .content
        p 0 cw - x

        ul
          clearfix()
          li.solution
            fl()
            w 33.3333333%
            p 0 1em
            box-sizing border-box

            .data
              w 100%
              b 1px solid hsl(lhue,25,85)
              p 0 0 1.5em
              border-radius 5px
              h3
                fw bold
                lh x*3
                p 0 1.5em
                text-shadow w50 0 1px 0
                border-radius 4px 4px 0 0
                bt 1px solid hsl(lhue,30,95)
                bb 1px solid hsl(lhue,30,75)
                background linear-gradient(top, hsl(lhue,35,90), hsl(lhue,35,80))
                relative()
                c hsl(lhue,45,30)
                aa()
                span.price
                  color hsl(lhue,45,50)
                  absolute top 0 right 1.5em

              ul.features
                h 180px
                mb 1.5em
                li
                  bb 1px dotted #ddd
                  p .5em 1.5em

              a.cta-button
                float none
                w cw*2
                m 0 auto
                b 1px solid hsl(lhue,25,85)
    &.downloads
      bb none
      pb 0
